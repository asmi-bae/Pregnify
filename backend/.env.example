# Server Configuration
PORT=8080                                    # Server port number
NODE_ENV=development                         # Environment (development/test)

# Application Configuration
APP_NAME="PREGNIFY"

# Database Configuration
MYSQL_DATABASE_URL="mysql://root:@localhost:3306/PREGNIFY-DATABASE"   # MySQL connection string
POSTGRES_DATABASE_URL="postgresql://localhost:5432/PREGNIFY-DATABASE"  # PostgreSQL connection string
MONGO_DATABASE_URL="mongodb://localhost:27017/PREGNIFY-DATABASE"  # MongoDB connection string

# Frontend URL
FRONTEND_URL=http://localhost:5173  #your frontend url

# JWT token
ACCESS_TOKEN_SECRET=<Your Access Token Secret>  # Secret key for access token
ACCESS_TOKEN_EXPIRES=15m

# Refresh Token Configuration
REFRESH_TOKEN_SECRET=<Your Refresh Token Secret>  # Secret key for refresh token
REFRESH_TOKEN_EXPIRES=30d
REFRESH_TOKEN_COOKIE_NAME=refreshToken  # Name of the refresh token cookie

# Email Configuration
SMTP_HOST=smtp.gmail.com                    # SMTP server host
SMTP_PORT=587                               # SMTP server port
SMTP_USER=<Your Email>             # SMTP username
SMTP_PASS=<Your SMTP Password>    # SMTP password or app-specific password
SMTP_FROM="Pregnify <your_email@example.com>" 

# Security Configuration
BCRYPT_SALT_ROUNDS=10                       # Number of salt rounds for password hashing
RATE_LIMIT_WINDOW=15                        # Rate limiting window in minutes
RATE_LIMIT_MAX_REQUESTS=100                 # Maximum requests per window

# API Configuration
API_VERSION=v1                              # API version
CORS_ORIGIN=http://localhost:5173         # Allowed CORS origin

# WebAuthn Configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:5173
WEBAUTHN_NAME="PREGNIFY"

# Session Configuration
SESSION_SECRET=<Your Session Secret>          # Session secret for cookie signing
SESSION_EXPIRY=86400000                     # Session expiry in milliseconds (24h)

# Two-Factor Authentication
TOTP_SECRET=<Your TOTP Secret>               # Secret for Time-based One-Time Password
MFA_ENABLED=false                          # Enable/disable Multi-Factor Authentication

# Cookie Configuration
COOKIE_EXPIRY=30d                           # Cookie expiry time (30 days)

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=<Your Cloudinary Cloud Name>
CLOUDINARY_API_KEY=<Your Cloudinary API Key>
CLOUDINARY_API_SECRET=<Your Cloudinary API Secret>
CLOUDINARY_BASE_FOLDER="PREGNIFY"
CLOUDINARY_NOTIFICATION_URL="http://localhost:8080/api/v1/media/notification"

# Twilio Configuration
TWILIO_ACCOUNT_SID=<Your Twilio Account SID>
TWILIO_AUTH_TOKEN=<Your Twilio Auth Token>
TWILIO_PHONE_NUMBER=<Your Twilio Phone Number>

# Payment Gateway Configurations
BKASH_API_URL=<Your BKash API URL>
BKASH_APP_KEY=<Your BKash App Key>
BKASH_APP_SECRET=<Your BKash App Secret>
BKASH_USERNAME=<Your BKash Username>
BKASH_PASSWORD=<Your BKash Password>
BKASH_MERCHANT_ID=<Your BKash Merchant ID>

NAGAD_API_URL=<Your Nagad API URL>
NAGAD_MERCHANT_ID=<Your Nagad Merchant ID>
NAGAD_MERCHANT_NUMBER=<Your Nagad Merchant Number>
NAGAD_PUBLIC_KEY=<Your Nagad Public Key>
NAGAD_PRIVATE_KEY=<Your Nagad Private Key>

STRIPE_SECRET_KEY=<Your Stripe Secret Key>
STRIPE_PUBLISHABLE_KEY=<Your Stripe Publishable Key>
STRIPE_WEBHOOK_SECRET=<Your Stripe Webhook Secret>

PAYPAL_CLIENT_ID=<Your PayPal Client ID>
PAYPAL_CLIENT_SECRET=<Your PayPal Client Secret>
PAYPAL_MODE=sandbox # or 'live' for production

BANK_NAME=<Your Bank Name>
BANK_ACCOUNT_NUMBER=<Your Bank Account Number>
BANK_ROUTING_NUMBER=<Your Bank Routing Number>
BANK_BRANCH_CODE=<Your Bank Branch Code>

SSLCOMMERZ_STORE_ID=<Your SSLCommerz Store ID>
SSLCOMMERZ_STORE_PASSWORD=<Your SSLCommerz Store Password>
SSLCOMMERZ_IS_LIVE=false # true for production

# Payment Security
PAYMENT_ENCRYPTION_KEY=<Your Payment Encryption Key>
PAYMENT_WEBHOOK_SECRET=<Your Payment Webhook Secret>

# OpenAI API Key
OPENAI_API_KEY=<Your OpenAI API Key>
OPENAI_API_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=<Your OpenAI Model>
